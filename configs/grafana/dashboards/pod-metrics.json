{
  "dashboard": {
    "title": "Pod Metrics Dashboard",
    "tags": ["pod", "metrics", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 0,
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "pod",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up{job=\"kubernetes-pods\"}, kubernetes_pod_name)",
          "refresh": 1,
          "regex": "",
          "sort": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "namespace",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up{job=\"kubernetes-pods\", kubernetes_pod_name=~\"$pod\"}, kubernetes_namespace)",
          "refresh": 1,
          "regex": "",
          "sort": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "controller_kind",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up{job=\"kubernetes-pods\", kubernetes_pod_name=~\"$pod\"}, kubernetes_pod_controller_kind)",
          "refresh": 1,
          "regex": "",
          "sort": 1,
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Pod Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"kubernetes-pods\", kubernetes_pod_name=~\"$pod\", kubernetes_namespace=~\"$namespace\"}",
            "legendFormat": "{{kubernetes_pod_name}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "Down",
                    "color": "red"
                  },
                  "1": {
                    "text": "Up",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Pod List",
        "type": "table",
        "targets": [
          {
            "expr": "up{job=\"kubernetes-pods\", kubernetes_pod_name=~\"$pod\", kubernetes_namespace=~\"$namespace\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "Value": false
              },
              "indexByName": {
                "Time": 0,
                "Value": 1,
                "kubernetes_pod_name": 2,
                "kubernetes_namespace": 3,
                "kubernetes_node_name": 4,
                "kubernetes_pod_controller_kind": 5,
                "kubernetes_pod_controller_name": 6
              },
              "renameByName": {
                "Value": "Status",
                "kubernetes_pod_name": "Pod Name",
                "kubernetes_namespace": "Namespace",
                "kubernetes_node_name": "Node",
                "kubernetes_pod_controller_kind": "Controller Kind",
                "kubernetes_pod_controller_name": "Controller Name"
              }
            }
          }
        ]
      },
      {
        "id": 3,
        "title": "Pod Metrics (if available)",
        "type": "graph",
        "targets": [
          {
            "expr": "up{job=\"kubernetes-pods\", kubernetes_pod_name=~\"$pod\", kubernetes_namespace=~\"$namespace\"}",
            "legendFormat": "{{kubernetes_pod_name}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      }
    ]
  }
}

